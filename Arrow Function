function pi() {
  return 3.14;
}
console.log(pi())
// função sem definição de parâmetro

function imc(peso, altura) {
  const imc = peso / (altura ** 2);
  return imc;
}

imc(80, 1.80)
console.log(imc(80, 1.80))
// função com definição de parâmetro

multiplicacao= (num1, num2) => num1 * num2
//Função com arrow formato arrow function. Apenas é necessário o uso de => para definição da função

console.log(multiplicacao(3, 0.14).toFixed(2))
